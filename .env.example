# --- Database ---
# Postgres example:
# DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/lol_friends?schema=public"
# SQLite example:
# DATABASE_URL="file:./dev.db"

# --- Riot ---
RIOT_API_KEY="RGAPI-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
# For EUW players:
RIOT_REGION="euw1"     # platform routing (euw1, eun1, na1, kr, ...)
RIOT_ROUTING="europe"  # regional routing for account/match (europe, americas, asia)

# Optional: how long we consider a match "fresh" in DB (minutes)
MATCH_FRESHNESS_MINUTES="30"

# Riot: min delay between calls (helps with quota)
RIOT_MIN_DELAY_MS="140"

# --- Sync limits (serverless safe) ---
# Total time budget for a single sync run (ms). Keep below Vercel's 300s.
# (Default is 240s + a small safety buffer.)
SYNC_TIME_BUDGET_MS="240000"

# Max friends processed per sync run (global /api/sync). Budgeted + resumable.
SYNC_MAX_FRIENDS_PER_RUN="5"

# How many pages of match IDs (count=100) we fetch per friend per run.
SYNC_MATCH_ID_PAGES_PER_FRIEND="1"

# Soft cap: max match IDs we link per friend per run.
SYNC_MAX_MATCH_IDS_PER_FRIEND_PER_RUN="100"

# Global cap: how many match details (/match/by-id) we fetch per sync run.
MATCH_DETAILS_PER_RUN="15"

# Optional: fetch match timelines (heavy). OFF by default.
FETCH_TIMELINE="0"
# Even if FETCH_TIMELINE=1, we only fetch at most this many timelines per sync run.
TIMELINE_MAX_MATCHES="1"

# Debug: log Riot endpoints + status codes + friendId
# Set to "1" to enable
DEBUG_RIOT="0"

# Optional: Supabase Storage avatars
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""
